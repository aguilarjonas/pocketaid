<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonas.pocketaid.PracticeFragments.InteractivePracticeMaterialsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_abrasion"
        android:id="@+id/imageView_pic1"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_fracture"
        android:id="@+id/imageView_pic4"
        android:layout_alignTop="@+id/imageView_pic3"
        android:layout_alignLeft="@+id/imageView_pic2"
        android:layout_alignStart="@+id/imageView_pic2"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
         />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bites"
        android:id="@+id/imageView_pic2"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_insect"
        android:layout_marginTop="20dp"
        android:id="@+id/imageView_pic5"
        android:layout_below="@+id/imageView_pic3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_dir_hospt_v2"
        android:id="@+id/imageView_pic6"
        android:layout_alignTop="@+id/imageView_pic5"
        android:layout_alignLeft="@+id/imageView_pic4"
        android:layout_alignStart="@+id/imageView_pic4"
         />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/checkmark"
        android:id="@+id/imageView3_check"
        tools:visibility="visible"
        android:layout_above="@+id/imageView_pic6"
        android:layout_alignRight="@+id/imageView_pic3"
        android:layout_alignEnd="@+id/imageView_pic3"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/checkmark"
        android:id="@+id/imageView4_check"
        tools:visibility="visible"
        android:layout_above="@+id/imageView_pic6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/checkmark"
        android:id="@+id/imageView2_check"
        tools:visibility="visible"
        android:layout_alignBottom="@+id/imageView_pic2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/checkmark"
        android:id="@+id/imageView1_check"
        tools:visibility="visible"
        android:layout_above="@+id/imageView_pic3"
        android:layout_alignRight="@+id/imageView_pic1"
        android:layout_alignEnd="@+id/imageView_pic1" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/checkmark"
        android:id="@+id/imageView6_check"
        tools:visibility="visible"
        android:layout_above="@+id/button_practice_next"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/checkmark"
        android:id="@+id/imageView5_check"
        tools:visibility="visible"
        android:layout_above="@+id/button_practice_next"
        android:layout_alignRight="@+id/imageView_pic5"
        android:layout_alignEnd="@+id/imageView_pic5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView_pic4"
        android:layout_alignRight="@+id/imageView_pic1"
        android:layout_alignEnd="@+id/imageView_pic1"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:id="@+id/textView_materials1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView_pic4"
        android:layout_toLeftOf="@+id/imageView2_check"
        android:layout_toStartOf="@+id/imageView2_check"
        android:id="@+id/textView_materials2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_materials1"
        android:layout_alignStart="@+id/textView_materials1"
        android:id="@+id/textView_materials3"
        android:layout_below="@+id/imageView_pic3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_concussion"
        android:id="@+id/imageView_pic3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_materials3"
        android:layout_toLeftOf="@+id/imageView4_check"
        android:layout_toStartOf="@+id/imageView4_check"
        android:id="@+id/textView_materials4" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_materials5"
        android:layout_alignBottom="@+id/imageView_pic5"
        android:layout_alignLeft="@+id/textView_materials3"
        android:layout_alignStart="@+id/textView_materials3" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_pic6"
        android:layout_alignLeft="@+id/textView_materials4"
        android:layout_alignStart="@+id/textView_materials4"
        android:id="@+id/textView_materials6" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_practice_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
