<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/hospitalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_hospitalName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="63dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/ic_dir_hospt_v2"
        android:id="@+id/image_directions"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_vicinity"
        android:text="@string/hospitalContactNumber"
        android:layout_alignBottom="@+id/image_callhospital"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="63dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/ic_call_hospt"
        android:id="@+id/image_callhospital"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/image_directions"
        android:layout_toStartOf="@+id/image_directions" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_hospitalName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textview_placeid"
        android:visibility="invisible"
        />

</RelativeLayout>