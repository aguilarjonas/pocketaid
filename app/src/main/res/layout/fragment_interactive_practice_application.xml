<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.jonas.pocketaid.PracticeFragments.InteractivePracticeApplication">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/application_steps"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/relativeLayout_Touch"
                    android:background="@android:color/holo_green_light"/>

                <TextView
                    android:id="@+id/triggerTextview"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="?android:attr/panelColorBackground"
                    android:layout_marginTop="97dp"
                    android:keepScreenOn="false"
                    android:visibility="visible"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp" />
            </FrameLayout>


            <TextView
                android:layout_margin="@dimen/ten_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="MATERIALS:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginEnd="50dp"
                    android:src="@drawable/checkmark"
                    android:id="@+id/iv_application_material1" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginEnd="50dp"
                    android:src="@drawable/checkmark"
                    android:id="@+id/iv_application_material2" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/checkmark"
                    android:id="@+id/iv_application_material3" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/backButtonApplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />
    </RelativeLayout>
</ScrollView>
